{
  "name": "solguard",
  "version": "0.1.0",
  "description": "SolGuard - AI-Powered Smart Contract Auditor for Solana. Scan your code for 130+ vulnerability patterns.",
  "author": "Midir <midir@clawd.bot>",
  "license": "MIT",
  "homepage": "https://github.com/oh-ashen-one/solguard",
  "repository": {
    "type": "git",
    "url": "https://github.com/oh-ashen-one/solguard.git"
  },
  "bugs": {
    "url": "https://github.com/oh-ashen-one/solguard/issues"
  },
  "keywords": [
    "solana",
    "anchor",
    "smart-contract",
    "security",
    "audit",
    "vulnerability",
    "cli",
    "sdk",
    "vibe-coding"
  ],
  "type": "module",
  "main": "dist/sdk.js",
  "types": "dist/sdk.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sdk.js",
      "types": "./dist/sdk.d.ts"
    },
    "./cli": {
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "solguard": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts src/sdk.ts --format esm --dts",
    "test": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@solana/web3.js": "^1.95.0",
    "chalk": "^5.3.0",
    "cli-cursor": "^5.0.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
