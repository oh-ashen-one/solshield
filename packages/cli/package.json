{
  "name": "solshield-cli",
  "version": "0.2.0",
  "description": "SolShield CLI - The first security check for vibe-coded Solana programs. 5,916 vulnerability patterns.",
  "author": "SolShield Team",
  "license": "MIT",
  "homepage": "https://github.com/oh-ashen-one/solshield",
  "repository": {
    "type": "git",
    "url": "https://github.com/oh-ashen-one/solshield.git"
  },
  "bugs": {
    "url": "https://github.com/oh-ashen-one/solshield/issues"
  },
  "keywords": [
    "solana",
    "anchor",
    "smart-contract",
    "security",
    "audit",
    "vulnerability",
    "scanner",
    "cli",
    "solshield"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "solshield": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^13.0.6",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
